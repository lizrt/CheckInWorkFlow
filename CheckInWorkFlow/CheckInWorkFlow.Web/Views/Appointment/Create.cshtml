
@model AppointmentModel
@{
    ViewData["Title"] = "Create Appointment";
}
<div class="panel panel-primary" style="width:60%">
    <h2>
       Add new Appointment
    </h2>

    <div class="panel-body">
        <form asp-controller="Appointment" asp-action="Create" method="post">
            <div class="row "></div>
            
            <div class="form-group col-md-6">
                
                    <label asp-for="DateOfAppointment">Date Of Appointment</label>
               
                    <input type="date" asp-for="DateOfAppointment" class="form-control"/>
               
            </div>
            <div class="form-group col-md-6">
                
                    <label asp-for="Capacity">Capacity</label>
                
                    <input type="number" class="form-control" asp-for="Capacity" />
              
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
               
                    <button type="submit" class="btn btn-primary">Add Appointment</button>
               
            
        </form>
    </div>
    </div>
