
@model PassengerModel
@{
    ViewData["Title"] = "Create Passenger";
}
<div class="panel panel-primary" style="width:60%">
    <h2>
       Add new Passenger
    </h2>

    <div class="panel-body">
        <form asp-controller="Passenger" asp-action="Create" method="post">
            <div class="row "></div>
            
            <div class="form-group col-md-6">
                
                    <label asp-for="FirstName">First Name</label>
               
                    <input asp-for="FirstName" class="form-control" />
               
            </div>
            <div class="form-group col-md-6">
                
                     <label asp-for="LastName">Last Name</label>
               
                    <input asp-for="LastName" class="form-control"/>
              
            </div>
             <div class="form-group col-md-6">
                
                  <label asp-for="Weight">Weight</label>
                
                    <input type="number" class="form-control" asp-for="Weight" />
              
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
               
                    <button type="submit" class="btn btn-primary">Add Passenger</button>
               
            
        </form>
    </div>
    </div>
